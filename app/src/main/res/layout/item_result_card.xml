<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainResultCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trap #1 - South Field"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#134252" />

                <TextView
                    android:id="@+id/resultTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyzed: Yesterday, 10:30 AM"
                    android:textSize="12sp"
                    android:textColor="#627077"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ Complete"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#00897B"
                android:background="@drawable/badge_success"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="12dp" />

        <!-- Pest Detection Section -->
        <LinearLayout
            android:id="@+id/pestSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETECTED SPECIES"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#627077"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pest_item_bg"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ›"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pestName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thrips (Frankliniella)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#134252" />

                    <TextView
                        android:id="@+id/pestCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Count: 8 â€¢ Confidence: 79%"
                        android:textSize="12sp"
                        android:textColor="#627077"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- No Pest Section -->
        <LinearLayout
            android:id="@+id/noPestSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textSize="40sp"
                android:textColor="#00897B"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Pests Detected"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#00897B"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The field appears clear of infestation."
                android:textSize="13sp"
                android:textColor="#627077"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- Recommendations Section -->
        <LinearLayout
            android:id="@+id/recommendationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMMENDATIONS"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#627077"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High infestation detected. Immediate intervention recommended."
                android:textSize="12sp"
                android:textColor="#134252"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>