<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainResultCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trap #1 - South Field"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/resultTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyzed: Yesterday, 10:30 AM"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Complete"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:background="@drawable/badge_success"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border"
            android:layout_marginBottom="12dp" />

        <!-- Pest Detection Section -->
        <LinearLayout
            android:id="@+id/pestSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/detectedSpeciesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETECTED SPECIES"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#627077"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/pestContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <!-- No Pest Detection Section -->
        <LinearLayout
            android:id="@+id/noPestSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓"
                android:textSize="40sp"
                android:textColor="#00897B"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Pests Detected"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#00897B"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The field appears clear of infestation."
                android:textSize="13sp"
                android:textColor="#627077"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- Recommendations Section -->
        <LinearLayout
            android:id="@+id/recommendationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMMENDATIONS"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#627077"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High infestation detected. Immediate intervention recommended."
                android:textSize="13sp"
                android:textColor="#134252"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>