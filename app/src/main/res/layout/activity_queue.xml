<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFCF9">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload Management"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#134252" />

        <Button
            android:id="@+id/backButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Back"
            android:textColor="#00897B"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            app:strokeColor="#00897B" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ready to Upload Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to Upload"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#134252"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/readyToUploadContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />

            <!-- Uploading Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploading"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#134252"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/uploadingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp" />

            <!-- Awaiting Feedback Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awaiting Feedback"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#134252"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/queuedContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- Upload All Button -->
            <Button
                android:id="@+id/uploadAllButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Upload All"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#00897B"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginTop="16dp" />

            <!-- Info Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-sync when connectivity available â€¢ Works offline"
                android:textSize="11sp"
                android:textColor="#627077"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>