<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCF9">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#134252" />

        <Button
            android:id="@+id/logoutButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#627077"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quick Actions Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#134252"
                android:layout_marginBottom="12dp" />

            <!-- Capture Trap Button -->
            <Button
                android:id="@+id/captureTrapButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“· Capture Trap"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#00897B"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginBottom="12dp" />

            <!-- Upload Queue Button -->
            <Button
                android:id="@+id/uploadQueueButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“¤ Upload Management"
                android:textSize="16sp"
                android:textColor="#00897B"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:strokeColor="#00897B"
                android:layout_marginBottom="24dp" />

            <!-- Recent Results Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Results"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#134252"
                android:layout_marginBottom="12dp" />

            <!-- Recent Traps RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentTrapsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>